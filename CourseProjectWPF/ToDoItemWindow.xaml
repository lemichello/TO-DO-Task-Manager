<Window x:Class="CourseProjectWPF.ToDoItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CourseProjectWPF"
        mc:Ignorable="d"
        Title="Editing TO-DO Task" Height="439.623" Width="600" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel>
        <StackPanel.Resources>
            <Style x:Key="ControlStyle" TargetType="Control">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Height" Value="30" />
            </Style>
            <Style x:Key="LabelStyle" TargetType="Label" BasedOn="{StaticResource ControlStyle}">
                <Setter Property="FontSize" Value="17" />
            </Style>
            <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ControlStyle}">
                <Setter Property="FontSize" Value="20" />
            </Style>
        </StackPanel.Resources>
        <Label Content="Header" Style="{StaticResource LabelStyle}" />
        <TextBox Name="HeaderText" Style="{StaticResource TextBoxStyle}" />
        <Label Content="Notes" Style="{StaticResource LabelStyle}" />
        <TextBox Name="NotesText" Style="{StaticResource TextBoxStyle}" />
        <Label Content="Date" Style="{StaticResource LabelStyle}" />
        <DatePicker Name="PickedDate" Style="{StaticResource ControlStyle}" />
        <Label Content="Deadline" Style="{StaticResource LabelStyle}" />
        <DatePicker Name="PickedDeadline" Style="{StaticResource ControlStyle}" />
        <Button Content="Save" FontSize="16" Style="{StaticResource ControlStyle}" Click="Save_OnClick" />
        <Button Content="Delete" FontSize="16" Style="{StaticResource ControlStyle}" Click="Delete_OnClick" />
    </StackPanel>
</Window>